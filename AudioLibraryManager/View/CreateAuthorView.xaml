<Window x:Class="AudioLibraryManager.View.CreateAuthorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CreateGenreView" Height="180" Width="300">
    <Grid VerticalAlignment="Center">
        <StackPanel Margin="10">
            <TextBlock Text="Author:"/>
            <TextBox x:Name="AuthorTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Country:"/>
            <TextBox x:Name="CountryTextBox" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="Create" Width="100" Margin="10" Click="CreateBtn_Click"/>
                <Button Content="Cancel" Width="100" Margin="10" Click="CancelBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
