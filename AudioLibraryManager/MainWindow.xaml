<Window x:Class="AudioLibraryManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:view="clr-namespace:AudioLibraryManager.View"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="500" Width="1050">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <view:TracksListView Margin="2" Grid.Column="0"/>
        <view:AuthorsListView Margin="2" Grid.Column="1"/>
        <view:GenresListView Margin="2" Grid.Column="2"/>
    </Grid>
</Window>
